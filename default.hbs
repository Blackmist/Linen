    {{ghost_head}}
</head>


<body class="home blog {{body_class}}" style="">

    <div id="container">

        <header class="header" role="banner">

            <div id="inner-header" class="wrap clearfix">

                <!-- Logo and Blog Title -->
                <p id="logo" class="h1">
                    {{#if @blog.logo}}<a id="logo" href="/"><img src="{{@blog.logo}}" alt="Logo"></a>{{/if}}
                    <a href="/" rel="nofollow">{{@blog.title}}</a>
                </p>

                <!-- Site Description -->
                {{@blog.description}}

                <nav role="navigation">
                    <div class="nav top-nav clearfix">
                        {{nav}}

                    </div>
                </nav>

            </div> <!-- end #inner-header -->

        </header> <!-- end header -->

        {{{body}}}

        <footer class="footer" role="contentinfo">

            <div id="inner-footer" class="wrap clearfix">

                <nav role="navigation">
                </nav>

                <p class="source-org copyright">© 2013 Theme Spectre, LLC.</p>

            </div> <!-- end #inner-footer -->

        </footer> <!-- end footer -->

    </div> <!-- end #container -->

    <!-- JavaScript Libraries -->
    <script type="text/javascript" src="/js/libs/modernizr.custom.min.js"></script>

    <!-- The Ghost footer helper will insert some shared javascript libraries and files required by plugins -->
    {{ghost_foot}}

    <!-- Custom Scripts -->
    <script type="text/javascript" src="/js/scripts.js"></script>

    <!-- drop Google Analytics Here -->

    <!-- end analytics -->

<!-- end page. what a ride! -->
